<div class="working_pair" id="working_pair_<%= pair.id %>">
  <div class="header">
    <div class="timestamp"><span><%= pair.status_name %> <%= time_ago_in_words( pair.updated_at ) %> ago</span></div>
    <% if pair.older.count > 0 || pair.newer.count > 0 %>
    <div class="timeline toggles">
      <a href="" class="timeline_weave"></a>
      <span>view weavement timeline</span>
    </div>
    <% end %>
    <div class="toggles">
    
      <%= link_to '', 
        {:controller => :weaves, :action => :destroy, :id => pair.id}, 
        :confirm => 'Are you sure?', 
        :method => :delete, 
        :remote=> true, 
        :class=>'delete_weave' %>
      
      <%= link_to '', 
        {:controller => :weaves, :action => :favorite, :id => pair.id},
        :method =>  :post,
        :remote => true,
        :taget => '_blank',
        :class=>"favorite_weave favorite_#{pair.favorite?} favorite_#{pair.id}" %>
   
        
      <%= link_to '', 
        {:controller => :weaves, :action => :show, :id => pair.id},
        :taget => "_blank",
        :class=>'permalink_weave' %>
      
    </div>
    <br style="clear: both"/>
  </div>
  <div class="content">
    <table>
      <tr>
        <td>
          <div class="object left">
            <%= render :partial => "substrates/substrate", :locals => {:substrate => pair.object1} %>
          </div>
        </td>
        <td>
          <div  class="object right">
            <%= render :partial => "substrates/substrate", :locals => {:substrate => pair.object2} %>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <div class="relation">
    <span>
      <%= pair.relation %>
      <a class="edit_relation"></a>
    </span>
    <a href="/">
      <%= image_tag "btn_clusterList.png" %>
    </a>
  </div>
  <% if pair.older.count > 0%>
    <%= link_to content_tag(:span, pair.older.count),
      {:controller => :weaves, :action => :show, :id => pair.id, :direction => -1, :home_id => home_id },
      :remote => true,
      :class => "timearrow leftarrow",
      :id => "olderthan_#{home_id}" %>
  <% end %>
  <% if pair.newer.count > 0%>
    <%= link_to content_tag(:span, pair.newer.count),
      {:controller => :weaves, :action => :show, :id => pair.id, :direction => 1, :home_id => home_id },
      :remote => true,
      :class => "timearrow rightarrow",
      :id => "newerthan_#{home_id}"
    %>
  <% end %>
  <% if @home and @home != pair %>
    <%= link_to content_tag(:span, ""),
      {:controller => :weaves, :action => :show, :id => @home.id },
      :remote => true,
      :class => "homebutton",
      :id => "hometo_#{home_id}"
    %>
  <% end %>
</div>
